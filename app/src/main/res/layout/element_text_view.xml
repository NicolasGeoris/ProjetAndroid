<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/element_texte"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:background="@color/fond">

    <GridLayout
        android:rowCount="2"
        android:columnCount="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/fond"
        android:paddingTop="5sp"
        android:paddingBottom="5sp">

        <ImageView
            android:id="@+id/image_role"
            android:layout_width="30dp"
            android:layout_height="30dp">

        </ImageView>

        <TextView
            android:layout_row="0"
            android:layout_column="1"
            android:id="@+id/nom_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/gros_texte"
            android:paddingStart="@dimen/petit_padding"
            android:paddingEnd="@dimen/petit_padding"
            android:textColor="@color/couleur_texte"/>

        <TextView
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:id="@+id/description_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/petit_texte"
            android:paddingStart="@dimen/petit_padding"
            android:paddingEnd="@dimen/petit_padding"
            android:textColor="@color/couleur_texte"/>

    </GridLayout>

</androidx.cardview.widget.CardView>


